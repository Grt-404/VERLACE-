<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>VERLACE | Cart</title>
    <link rel="stylesheet" href="/stylesheets/cart.css" />
</head>

<body>
    <header class="topbar">
        <div class="logo">
            <a href="/" class="brand-name">VERLACE</a>
        </div>
        <nav class="nav-links">
            <a href="/shop">Shop</a>
            <a href="/cart">Cart</a>
            <a href="/users/myAccount">My Account</a>
            <a href="/users/logout">Logout</a>
        </nav>
    </header>

    <div class="cart-container">
        <div class="cart-product">
            <% productsInCart.forEach((product, idx) => { %>
                <div class="cart-item">
                    <div class="product-image">
                        <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                    </div>
                    <div class="product-details">
                        <h2><%= product.name %></h2>
                        <div class="quantity">
                            <a href="#" class="remove-btn">âˆ’</a>
                            <p class="amount">01</p>
                            <a href="/removeFromCart/idx" class="add-btn">+</a>
                        </div>
                        <p class="net-total">Net Total <strong>&#8377;<%= product.price %></strong></p>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="cart-summary">
            <h3>Price Breakdown</h3>
            <div class="summary-line">
                <span>Total MRP</span>
                <span>&#8377;<%= totalMrp %></span>
            </div>
            <div class="summary-line">
                <span>Discount on MRP</span>
                <span>&#8377;<%= totalDiscount %></span>
            </div>
            <div class="summary-line">
                <span>Platform Fee</span>
                <span>&#8377;20</span>
            </div>
            <div class="summary-line">
                <span>Shipping Fee</span>
                <span>FREE</span>
            </div>
            <hr />
            <div class="summary-total">
                <strong>Total Amount</strong>
                <strong style="color: #2a8f47">&#8377;<%= cartTotal + 20 %></strong>
            </div>
        </div>
    </div>
    <script src="javascripts/button.js"></script>
</body>

</html>
